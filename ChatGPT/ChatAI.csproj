    <None Remove="Assets\delete.png" />
    <None Remove="Assets\logo.ico" />
    <None Remove="Assets\Poster1.png" />
    <None Remove="Assets\Poster2.jpg" />
    <None Remove="Assets\Poster3.jpg" />
    <None Remove="Assets\Poster4.jpg" />
